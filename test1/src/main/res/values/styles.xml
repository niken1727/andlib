<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputFieldLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/colorBlack</item>
        <item name="android:colorControlActivated">@color/gray</item>
        <item name="hintTextAppearance">@style/HintTextProps</item>
        <item name="errorTextAppearance">@style/InputFieldError</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="HintTextProps">
        <item name="android:textColor">#353b48</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="InputFieldError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pp_primary</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>