<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pp_primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="InputFieldLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/colorBlack</item>
        <item name="android:colorControlActivated">@color/gray</item>
        <item name="hintTextAppearance">@style/HintTextProps</item>
        <item name="errorTextAppearance">@style/InputFieldError</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="HintTextProps">
        <item name="android:textColor">#353b48</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="InputFieldError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pp_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>